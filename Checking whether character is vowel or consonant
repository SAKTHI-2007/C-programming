#include <stdio.h> 
int main ()
{
    char ch;
    printf("enter a character:");
    scanf("%c",&ch);
    if((ch>='A'&& ch<='Z')||(ch>='a'&&ch<='z')){
        switch(ch){
            case 'a':
            case 'A':
            printf("%c is a vowel /n",ch);
            break;

            case 'e':
            case 'E':
            printf("%c is a vowel /n",ch);
            break;
            
            case 'i':
            case 'I':
            printf("%c is a vowel /n",ch);
            break;
            
            case 'o':
            case 'O':
            printf("%c is a vowel /n",ch);
            break;
            
            case 'u':
            case 'U':
            printf("%c is a vowel /n",ch);
            break;
            
            default:
            printf("\nNot a vowel");
            break;
        }    
    }
    else{
        printf("\nEnter a character not anything else!!");
    }
    return 0;
}
